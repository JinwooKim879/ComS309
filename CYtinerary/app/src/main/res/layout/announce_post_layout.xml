<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    tools:context=".Announce_Post">

    <!-- This is a copy of item_announcement right now. I think the layout for viewing a single post would be similar -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".Course_Page">

        <TextView
            android:id="@+id/announceCC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CourseCode" />

        <TextView
            android:id="@+id/announceT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnnouncementTitle" />

        <TextView
            android:id="@+id/announceD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date" />

        <TextView
            android:id="@+id/announceC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>