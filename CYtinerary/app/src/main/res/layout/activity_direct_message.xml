<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DirectMessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".DirectMessageActivity">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dmToID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ID number of recipient" />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/dmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Direct Message"/>
        <Button
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="connect"/>

        <Button
            android:id="@+id/btn_send_dm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Message"
            android:clickable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:id="@+id/txt1"

            android:scrollbars="vertical"
            android:text="Conversations will appear here:\n"/>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>